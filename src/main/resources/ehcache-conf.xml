<?xml version="1.0" encoding="UTF-8"?>
<ehcache:config xmlns:ehcache="http://www.ehcache.org/v3"
                xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                xsi:schemaLocation="http://www.ehcache.org/v3 http://www.ehcache.org/schema/ehcache-107-ext-3.0.xsd">

    <ehcache:cache alias="categories" uses-template="config-cache"/>
    <ehcache:cache alias="tasks" uses-template="config-cache"/>
    <ehcache:cache-template name="config-cache">
        <ehcache:expiry>
            <ehcache:ttl>2</ehcache:ttl>
        </ehcache:expiry>
    </ehcache:cache-template>
</ehcache:config>